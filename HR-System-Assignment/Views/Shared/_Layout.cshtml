<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <title>@ViewData["Title"] - HR_System_Assignment</title>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/HR_System_Assignment.styles.css" asp-append-version="true" />

</head>
<body class="d-flex flex-column min-vh-100">
   <header>
      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
         <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
               <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse f">
               <div class=" navigation_box">
                  <ul class="navbar-nav ">
                     <li class="nav-item">
                        <div class="logo_image navbar-nav nav-item"><img src="~/Images/download.png" alt="Tourist Place Logo" width="100" height="100"></div>
                     </li>
                     <li class="nav-item">
                        <div class="title navbar-brand navbar-nav text-sea"><b>HR Management System</b></div>
                     </li>
                     <li class="nav-item">
                        <a class="logout nav-link text-sea" asp-area="" asp-controller="Home" asp-action="LogOut">Log Out</a>
                     </li>
                  </ul>
               </div>
               <div class=" d-sm-inline-flex justify-content-between">
                  <ul class="navbar-nav flex-grow-1 d" id="ul">
                     <li class="nav-item">
                        <a class="nav-link text-white m margin-left-extra b" asp-area="" asp-controller="Employee" asp-action="Index">Employees </a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link text-white m" asp-area="" asp-controller="Employee" asp-action="AddOrEditEmployee">Manage Employee</a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link  text-white m" asp-area="" asp-controller="Department" asp-action="Index">Departments </a>
                     </li>
                     <li class="nav-item">
                        <a class="nav-link text-white m margin-right-extra" asp-area="" asp-controller="Department" asp-action="AddOrUpdate">Manage Departments </a>
                     </li>
                  </ul>
               </div>
            </div>
         </div>
      </nav>
   </header>
   <div class="container">
      <main role="main" class="pb-3">
            @RenderBody()
      </main>
   </div>

   <footer class="border-top footer text-muted mt-auto">
      <div class="container">
         &copy; 2023 - HR_System_Assignment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
      </div>
   </footer>
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
   <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
